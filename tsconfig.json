{
  "compilerOptions": {
    "composite": true,
    "target": "ES5",
    "module": "CommonJS",
    "lib": ["es2019", "dom"],
    "declaration": true,
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "exclude": [
    "**/node_modules", "**/__mocks__/*", "**/__tests__/*", "**/*.spec.*", "**/*.test.*", "jest.config.js"
  ]
}
